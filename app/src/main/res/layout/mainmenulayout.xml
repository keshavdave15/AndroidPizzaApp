<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ru_pizza_main_menu"
        android:textSize="32sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_alignParentTop="true" />

    <!-- Chicago Style Pizza Section -->
    <LinearLayout
        android:id="@+id/chicagoPizzaSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/titleText"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/chicagoPizzaImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/chicago_pizza"
            android:src="@drawable/chicagopizzaimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chicago_style"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

    <!-- NY Style Pizza Section -->
    <LinearLayout
        android:id="@+id/nyPizzaSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/titleText"
        android:layout_toEndOf="@id/chicagoPizzaSection"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/nyPizzaImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/ny_pizza"
            android:src="@drawable/nypizzaimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ny_style"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

    <!-- Orders Placed Section -->
    <LinearLayout
        android:id="@+id/ordersPlacedSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/chicagoPizzaSection"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ordersPlacedImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/orders_placed"
            android:src="@drawable/ordersplacedimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orders_placed"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

    <!-- Current Order Section -->
    <LinearLayout
        android:id="@+id/currentOrderSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/nyPizzaSection"
        android:layout_toEndOf="@id/ordersPlacedSection"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/currentOrderImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/current_order"
            android:src="@drawable/currentorderimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_order"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
